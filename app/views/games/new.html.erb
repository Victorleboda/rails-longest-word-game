<h1 style="text-align:center">New game</h1>
<div class="main-container">
  <div class="randomletters">
    <ul>
      <% @letters.each do |letter| %>
      <li>
        <%= letter %>
      </li>
      <% end %>
    </ul>
  </div>

  <form action="/score" method="post">
    <h3>What is the longest word you can find?</h3>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'grid', @letters %>
    <input type="text" name="name" placeholder="Enter something please" class="champ">
    <input type="submit" class="btn">
  </form>
</div>
